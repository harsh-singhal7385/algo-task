      <!----- FORM ACCEPTS USER DATA AND DATA IS SENT TO SERVER WITH POSTAPI -->
      <div class="container jumbotron">
        <div class="container">
            <div class="display-4 text-center bg-warning fst-italic p-5">
              User Data 
            </div>
            <div class="container bg-info mt-5 mb-5 p-5">
                <form action="/postdata" class="mt-5 " onsubmit=`return check()` method="post">
                    <div class="form-group row">
                        <div class="form-group col">
                            <label for="fname" class="form-label fw-bold">Name </label>
                            <input type="text" pattern="^[A-Za-z]{3,30}(\s)+[A-Za-z]{3,30}$"  minlength="3" maxlength="30" oninvalid="this.setCustomValidity('Enter First and Last Name with each having min 3 and max 30 alphabetic characters only and space between them. Example : John Dapp')"
                            oninput="this.setCustomValidity('')" name="fname" id="fname" placeholder="Name" class="form-control"  required />
                        </div>
                        <br />
                        <div class="form-group col">
                            <label for="income" class="form-label fw-bold"> Income </label>
                            <input type="number" pattern="^[0-9]{4,8}$" minlength="1000" maxlength="100000000" oninvalid="this.setCustomValidity('Enter Income with conditions.\n Min income = 1000, Max income = 10000000. Example : 99999')"
                            oninput="this.setCustomValidity('')" name="income"  id="income" placeholder="Income" class="form-control"  required />
                        </div>
                        <br />
                    </div>    
                    <br />
                    <div class="form-group row">
                        <div class="form-group col">
                            <label for="email" class="form-label fw-bold">Email</label>
                            <input type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,63}$"  oninvalid="this.setCustomValidity('Enter Email in proper format. Example : aaa@gmail.com ')"
                            oninput="this.setCustomValidity('')" name="email" id="email" placeholder="Email" class="form-control"  required />
                        </div>
                        <br />
                        <div class="form-group col">
                          <label for="mobile" class="form-label fw-bold">Mobile Number </label>
                            <input type="tel" pattern="^\d{10}$" oninvalid="this.setCustomValidity('Enter Phone Number in proper format of 10 digits only. Example : 9876543210 ')"
                            oninput="this.setCustomValidity('')" size="10" name="mobile" id="mobile" placeholder="Mobile number" maxlength="10" minlength="10" class="form-control"  required />
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                      <div class="form-group col ">
                        <label for="date" class="form-label fw-bold"> Date </label>
                          <input type="date"  max="2099-12-31" max="1950-01-01" oninvalid="this.setCustomValidity('Enter Valid Date with conditions. Smallest Date: 01/01/1950, Largest Date : 31/12/2099. Example: 01/01/2000 ')"
                          oninput="this.setCustomValidity('')" name="date" id="date" placeholder="Date" class="form-control"  required />
                      </div>
                      <br />
                      <div class="form-group col">
                        <label for="ip_address" class="form-label fw-bold"> IP Address </label>
                          <input type="text" pattern="(^[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3})$" oninvalid="this.setCustomValidity('Enter your IP Address. Example : 192.168.0.0 ')"
                          oninput="this.setCustomValidity('')" name="ip_address" id="ip_address" placeholder="IP Address" class="form-control"  required />
                      </div>
                    </div>
                    
                    <br /> 
                    <div class="form-group text-center mt-4">
                        <input type="submit"  class=" btn btn-danger" />
                    </div>
                    <br />
                </form>
            </div>
        </div>
      </div>
      <!----- REQUEST FOR DATA TO LOAD DATA IN TABLE WITH GETAPI -->
      
